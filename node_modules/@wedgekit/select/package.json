{
  "name": "@wedgekit/select",
  "version": "8.0.4",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "start": "wedgekit build -p -d -w",
    "build": "wedgekit build -p -c -d",
    "prepublish": "yarn build",
    "test": "ava",
    "test:ci": "ava",
    "test:coverage:ci": "nyc ava --tap | tap-xunit --package=\"@wedgekit/select\" > ../../junit/ava/select.xml",
    "test:coverage": "nyc ava"
  },
  "dependencies": {
    "@dmsi/core": "^8.0.0",
    "@wedgekit/button": "^3.0.0",
    "@wedgekit/color": "^4.5.3",
    "@wedgekit/checkbox": "3.0.1",
    "@wedgekit/checkbox-list": "^4.0.0",
    "@wedgekit/hooks": "4.1.0",
    "@wedgekit/icons": "^4.0.0",
    "@wedgekit/info-button": "2.0.1",
    "@wedgekit/input": "2.0.4",
    "@wedgekit/popover": "4.0.2",
    "@wedgekit/primitives": "4.0.1",
    "@wedgekit/utils": "^2.0.0",
    "react-merge-refs": "^1.1.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@types/uuid": "^8.3.0",
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0",
    "eslint-plugin-import": "^2.22.1",
    "nyc": "^15.0.1",
    "ts-node": "^10.2.1"
  },
  "peerDependencies": {
    "lodash": "^4.17.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^4.3.1"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
