{
  "name": "@wedgekit/utils",
  "version": "2.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./color": "./dist/color/index.js",
    "./position": "./dist/position/index.js",
    "./timezone": "./dist/timezone/index.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*",
        "dist/index.d.ts",
        "dist/*/index.d.ts"
      ]
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@types/jsdom": "^16.2.10",
    "@types/luxon": "^1.27.1",
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0",
    "jsdom": "^16.5.2",
    "nyc": "^15.0.1",
    "ts-node": "^10.2.1"
  },
  "dependencies": {
    "luxon": "^2.0.1",
    "rectangle-overlap": "^2.0.0"
  },
  "scripts": {
    "build": "wedgekit build -c -p -u",
    "start": "wedgekit build -d -p -w",
    "prepare": "yarn build",
    "prepublish:test": "yarn version --prerelease --preid tc --no-git-tag-version",
    "publish:test": "npm publish --tag test",
    "test": "ava",
    "test:ci": "ava",
    "test:coverage:ci": "nyc ava --tap | tap-xunit --package=\"@wedgekit/utils\" > ../../junit/ava/utils.xml",
    "test:coverage": "nyc ava"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
