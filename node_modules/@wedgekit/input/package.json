{
  "name": "@wedgekit/input",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "version": "2.0.4",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "scripts": {
    "start": "wedgekit build -p -d -w",
    "build": "wedgekit build -p -c",
    "prepublish": "yarn build",
    "test": "ava",
    "test:ci": "ava",
    "test:coverage:ci": "nyc ava --tap | tap-xunit --package=\"@wedgekit/input\" > ../../junit/ava/input.xml",
    "test:coverage": "nyc ava"
  },
  "dependencies": {
    "@dmsi/core": "^8.0.0",
    "@wedgekit/color": "^4.5.3",
    "@wedgekit/hooks": "4.1.0",
    "@wedgekit/icons": "^4.0.0",
    "@wedgekit/info-button": "2.0.1",
    "@wedgekit/primitives": "4.0.1",
    "@wedgekit/utils": "^2.0.0",
    "autosize": "^4.0.2",
    "imask": "^6.0.5",
    "react-merge-refs": "^1.1.0",
    "react-number-format": "^4.7.3",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/autosize": "^3.0.7",
    "@types/uuid": "^8.3.0",
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0"
  },
  "peerDependencies": {
    "moment-timezone": "^0.5.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^4.3.1"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
