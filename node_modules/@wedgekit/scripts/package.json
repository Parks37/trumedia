{
  "name": "@wedgekit/scripts",
  "license": "MIT",
  "version": "1.1.0",
  "description": "Configuration & Scripts for A2W Apps",
  "bin": {
    "wedgekit": "./bin/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "shx rm -rf bin && node ./build.js && tsc",
    "lint": "eslint",
    "postbuild": "shx cp -R templates/ bin/templates/ && shx cp -R src/configs/ bin/configs",
    "prepare": "yarn build",
    "start": "node ./build.js -w",
    "test": "ava src/**/*.test.ts",
    "test:ci": "nyc ava src/**/*.test.ts --tap | tap-xunit --package=\"@wedgekit/scripts\" > ../../junit/ava/scripts.xml",
    "test:coverage": "nyc ava src/**/*.test.ts"
  },
  "devDependencies": {
    "@types/ncp": "^2.0.4",
    "@types/node": "^15.12.2",
    "@types/sade": "^1.7.2",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "ava": "^3.15.0",
    "eslint": "^8.9.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-node": "^11.1.0",
    "shx": "^0.3.3",
    "ts-node": "^10.2.1"
  },
  "dependencies": {
    "@wedgekit/palette": "^1.0.0-tc.1",
    "chalk": "^4.1.1",
    "dotenv": "^10.0.0",
    "esbuild": "0.11.20",
    "globby": "^12.0.0",
    "latest-version": "^5.1.0",
    "ncp": "2.0.0",
    "read-pkg-up": "^8.0.0",
    "sade": "^1.7.4",
    "slash": "^4.0.0",
    "typescript": "^4.5.5",
    "vite": "2.8.6"
  },
  "files": [
    "README.md",
    "DOCUMENTATION.md",
    "bin/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
