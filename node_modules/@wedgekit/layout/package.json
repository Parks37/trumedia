{
  "name": "@wedgekit/layout",
  "version": "2.0.0",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/*"
  ],
  "repository": "https://design.dmsi.com/",
  "license": "MIT",
  "scripts": {
    "build": "wedgekit build -p -c",
    "prepublish:test": "yarn build && yarn version --prerelease --preid tc --no-git-tag-version",
    "publish:test": "yarn publish --tag test",
    "start": "wedgekit build -p -w -d",
    "test": "ava",
    "test:coverage": "nyc ava"
  },
  "dependencies": {
    "@wedgekit/color": "^4.5.3",
    "@wedgekit/primitives": "^4.0.0"
  },
  "devDependencies": {
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0",
    "react": "^17.0.2",
    "ts-node": "^10.2.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "styled-components": "^4.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
