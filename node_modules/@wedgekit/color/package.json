{
  "name": "@wedgekit/color",
  "version": "4.5.3",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.esm.js",
    "require": "./dist/index.cjs"
  },
  "type": "module",
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@wedgekit/scripts": "latest",
    "ava": "^3.15.0",
    "nyc": "^15.0.1",
    "prettier": "^1.17.1",
    "ts-node": "^10.2.1"
  },
  "scripts": {
    "build": "wedgekit build -p -c",
    "start": "wedgekit build -p -d -w",
    "prepublish:test": "yarn version --prerelease --preid tc --no-git-tag-version",
    "publish:test": "yarn publish --tag test",
    "test": "ava",
    "test:ci": "nyc ava --tap | tap-xunit --package=\"@wedgekit/color\" > ../../junit/ava/color.xml",
    "test:coverage": "nyc ava"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "concurrency": 4,
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    }
  }
}
