{
  "name": "@wedgekit/hooks",
  "version": "4.1.0",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0"
  },
  "scripts": {
    "build": "wedgekit build -p -c",
    "start": "wedgekit build -p -d -w",
    "prepublish": "yarn build",
    "test": "ava",
    "test:coverage": "nyc ava"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {},
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
