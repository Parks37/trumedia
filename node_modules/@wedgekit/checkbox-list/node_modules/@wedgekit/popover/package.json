{
  "name": "@wedgekit/popover",
  "description": "Base popover for use in Wedgekit components",
  "author": "",
  "license": "MIT",
  "version": "4.0.1",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@wedgekit/color": "^4.5.3",
    "@wedgekit/hooks": "^4.0.0",
    "@wedgekit/primitives": "4.0.1",
    "@wedgekit/utils": "^2.0.0",
    "dot-prop": "^7.2.0",
    "react-focus-on": "^3.5.4",
    "react-merge-refs": "^1.1.0"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.14",
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0",
    "jsdom": "^19.0.0",
    "ts-node": "^10.2.1"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^4.3.1"
  },
  "scripts": {
    "build": "wedgekit build -p -c",
    "start": "wedgekit build -p -d -w",
    "prepublish": "yarn build",
    "test": "ava"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
