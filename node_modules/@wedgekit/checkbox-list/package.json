{
  "name": "@wedgekit/checkbox-list",
  "version": "4.0.0",
  "description": "",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "build": "wedgekit build -p -c",
    "prepublish": "yarn build",
    "prepublish:test": "yarn version --prerelease --preid tc --no-git-tag-version",
    "publish:test": "npm publish --tag test",
    "start": "wedgekit build -p -d -w",
    "test": "ava",
    "test:ci": "ava",
    "test:coverage:ci": "nyc ava --tap | tap-xunit --package=\"@wedgekit/checkbox-list\" > ../../junit/ava/checkbox-list.xml",
    "test:coverage": "nyc ava"
  },
  "dependencies": {
    "@wedgekit/checkbox": "^3.0.0",
    "@wedgekit/primitives": "^4.0.0",
    "@wedgekit/utils": "^2.0.0"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@wedgekit/scripts": "^1.1.1-tc.0",
    "ava": "^3.15.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^4.3.1"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "timeout": "1m",
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
